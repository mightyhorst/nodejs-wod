{
  "name": "nodejs-wod",
  "version": "0.1.1",
  "private": true,
  "description": "NodeJS Workout of the Day",
  "keywords": ["nodejs", "expressjs", "swagger", "babel", "elasticsearch"],
  "author": "Nick Mitchell nick@kitset.io",
  "license": "",
  "main": "app.js",
  "dependencies": {
    "chai": "^4.2.0",
    "chai-datetime": "^1.5.0",
    "crypto": "0.0.3",
    "dotenv": "^6.2.0",
    "elasticsearch": "^15.4.1",
    "express": "^4.12.3",
    "mysql": "^2.16.0",
    "mysql2": "^1.6.4",
    "sequelize": "^4.42.0",
    "sinon": "^7.2.3",
    "swagger-express-mw": "^0.7.0",
    "swagger-ui-express": "^4.0.2",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-plugin-relative-path-import": "^2.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "babel-root-import": "^4.1.3",
    "eslint": "^4.7.2",
    "eslint-config-airbnb-base": "^12.0.1",
    "eslint-plugin-import": "^2.7.0",
    "mocha": "^3.0.2",
    "mockery": "^2.1.0",
    "node-mocks-http": "^1.7.3",
    "nodemon": "^1.12.1",
    "should": "^7.1.0",
    "supertest": "^1.0.0",
    "swagger": "^0.7.5"
  },
  "scripts": {
    "edit": "swagger project edit",
    "docker:compose": "bash cicd/docker_compose.sh",
    "deploy": "bash cicd/docker_push.sh",
    "dev": "nodemon app.js --exec babel-node",
    "build": "babel app.js api -d dist/api --source-root app.js --copy-files && npm run move-app",
    "move-app": "mv dist/api/app.js dist/app.js",
    "prod": "npm run build && node dist/app.js",
    "test:unit": "clear && mocha --require babel-polyfill --require babel-register test/unit/**/*.spec.js",
    "test:bundle": "npm run build && $(npm bin)/babel test -d dist/test --copy-files && rm -rf dist/test/unit",
    "test:api": "npm run docker:compose && npm run test:bundle && swagger project test dist",
    "start": "npm run prod"
  },
  "directories": {
    "test": "test"
  }
}
